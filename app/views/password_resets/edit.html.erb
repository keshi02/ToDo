<%= content_for(:title, "ToDo | パスワードリセット送信フォーム") %>
<h1 class="text-2xl pt-10 pb-10 flex justify-center">パスワードリセット送信フォーム</h1>

<%= form_with url: password_resets_path, scope: :password_reset, class: "flex flex-col justify-center items-center" do |f| %>


  <%= hidden_field_tag :email, @user.email %>

  <%= f.label :password, class: "block" %>
  <%= f.password_field :password, class: "block mb-5" %>

  <%= f.label :password_confirmation, class: "block" %>
  <%= f.password_field :password_confirmation, class: "block mb-4" %>

  <%= f.submit "送信", class: "px-4 py-2 mt-4 text-sm font-medium text-white uppercase transition-colors duration-200 transform bg-blue-600 rounded-md lg:w-auto hover:bg-blue-500 focus:outline-none focus:bg-blue-500" %>
<% end %>

