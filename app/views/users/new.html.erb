<%= content_for(:title, "ToDo | ユーザー登録") %>
<h1 class="text-2xl pt-10 pb-10 flex justify-center">ユーザ登録</h1>

<%= form_with model: @user, class: "flex flex-col justify-center items-center" do |f| %>
  <% if @user.errors.full_messages.any? %>
    <% @user.errors.full_messages.each do |error| %>
      <p class="text-red-500"><%= error %></p>
    <% end %>
  <% end %>
  <%= f.label :name, class: "block" %>
  <%= f.text_field :name, class: "block mb-5" %>

  <%= f.label :email, class: "block" %>
  <%= f.email_field :email, class: "block mb-5" %>

  <%= f.label :password, class: "block" %>
  <%= f.password_field :password, class: "block mb-5" %>

  <%= f.label :password_confirmation, class: "block" %>
  <%= f.password_field :password_confirmation, class: "block mb-4" %>

  <%= f.submit "送信", class: "px-4 py-2 mt-4 text-sm font-medium text-white uppercase transition-colors duration-200 transform bg-blue-600 rounded-md lg:w-auto hover:bg-blue-500 focus:outline-none focus:bg-blue-500" %>
<% end %>
