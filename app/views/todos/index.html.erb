<div class="pl-10 pt-10 font-bold text-4xl max-w-2xl mx-auto">
  <h1><%= @user.name %> のToDo</h1>
  <%= link_to "編集", edit_multiple_todos_path(todo_ids: @todos.pluck(:id)), class: "px-4 py-2 mt-10 text-sm font-midium text-white transition-colors duration-200 transform bg-blue-400 rounded-lg hover:bg-blue-500 focus:outline-none focus:bg-blue-600" %>
</div>
<div class="pt-10 max-w-2xl mx-auto">
  <% @todos.each do |todo| %>
    <%= link_to todo.title, todo_path(todo),  class:"ml-10 mt-5 mr-5 p-3 font-bold text-xl flex border" %>
  <% end %>
</div>