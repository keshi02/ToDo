<%= content_for(:title, "ToDo | ToDo作成") %>
<h1 class="text-2xl pt-10 pb-10 flex justify-center">ToDo作成</h1>

<%= form_with model: @todo, class: "flex flex-col justify-center items-center" do |f| %>
  <% if @todo.errors.full_messages.any? %>
    <% @todo.errors.full_messages.each do |error| %>
      <p class="text-red-500"><%= error %></p>
    <% end %>
  <% end %>
  <%= f.label :title, "タイトル", class: "block" %>
  <%= f.text_field :title, class: "block mb-5" %>

  <%= f.label :content, "本文", class: "block" %>
  <%= f.text_field :content, class: "block mb-5" %>

  <%= f.label :category_name, "カテゴリー" %>
  <%= f.text_field :category_name %>

  <%= f.submit "作成", class: "px-4 py-2 mt-4 text-sm font-medium text-white uppercase transition-colors duration-200 transform bg-blue-600 rounded-md lg:w-auto hover:bg-blue-500 focus:outline-none focus:bg-blue-500" %>
<% end %>
